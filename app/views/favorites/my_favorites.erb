<h1>List of my favorite bands</h1>
<% if @favorites == [] %>
    You don't have any favorite bands :(
<% end %>

<ol>
<% @favorites.each do |favorite| %>
<p><li><strong><%= favorite.band %></strong> 
    
    <% if favorite.comment %>
        <em>Reason Why:</em> 
        <%= favorite.comment %></li></p>
    <% end %>
    <a href="/favorites/<%= favorite.id %>/edit">Edit</a>
<% end %>
</ol>

